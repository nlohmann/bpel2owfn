# File last changed $Date: 2006/12/15 19:06:42 $ by $Author: nielslohmann $.
# Version $Revision: 1.10 $

echo ""

echo "test: oWFN creation"
bpel2owfn --input=$testdir/testfiles/purchase.bpel --mode=petrinet --format=owfn --output=purchase &> /dev/null
result1=$?

echo "test: LoLA creation"
bpel2owfn --input=$testdir/testfiles/loan.bpel --mode=petrinet --format=lola --output=loan &> /dev/null
result2=$?

echo "test: dot creation"
bpel2owfn --input=$testdir/testfiles/shipping.bpel --mode=petrinet --parameter=simplify --format=dot --output=shipping &> /dev/null
result3=$?

if test \( $result1 -eq 0 -a $result2 -eq 0 -a $result3 -eq 0 \) -a \
       	\( -f purchase.owfn -a -f loan.lola -a -f shipping.dot \)
then 
  result=0
else
  result=1
fi

exit $result
