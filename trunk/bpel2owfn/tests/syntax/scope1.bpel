<process name="scope1" targetNamespace="anyURI">

  <scope>
    <partnerLinks>
        <partnerLink  name="buyer" 
                      partnerLinkType="buyerLT"
                      partnerRole="sellerService"
                      myRole="buyerService" />
    </partnerLinks>
    
    <messageExchanges>
      <messageExchange name="shippingRequestMsg" />
    </messageExchanges>

    <variables>
      <variable name="shipRequest"
                messageType="shippingRequestMsg" />
    </variables>
    
    <correlationSets>
      <correlationSet name="specialID" initialize="yes" />
    </correlationSets>
    
    <faultHandlers>
      <catchAll>
          <exit />
      </catchAll>
    </faultHandlers>    

    <compensationHandler>
      <compensate />
    </compensationHandler>
    
    <terminationHandler>
      <compensate />
    </terminationHandler>
    
    <eventHandlers>
      <onEvent  partnerLink="buyer"
                operation="haltOrder">
        <scope>
          <exit />
        </scope>
      </onEvent>
    </eventHandlers>

    <empty/>
  </scope>
  
</process>
