# File last changed $Date: 2007/04/19 14:10:59 $ by $Author: nielslohmann $.
# Version $Revision: 1.12 $

echo ""

echo "test: Petri net file output: oWFN format"
bpel2owfn --input=$testdir/testfiles/auctionService.bpel --mode=petrinet --format=owfn --output=auctionService &> /dev/null
result1=$?

echo "test: Petri net file output: LoLA format"
bpel2owfn --input=$testdir/testfiles/loanApprovalProcess.bpel --mode=petrinet --format=lola --output=loanApprovalProcess &> /dev/null
result2=$?

echo "test: Petri net file output: dot format"
bpel2owfn --input=$testdir/testfiles/purchaseOrderProcess.bpel --mode=petrinet --parameter=reduce --format=dot --output=purchaseOrderProcess &> /dev/null
result3=$?

echo "test: pretty-printed BPEL export"
bpel2owfn --input=$testdir/testfiles/shippingService.bpel --mode=pretty -fxml --output=shippingService  &> /dev/null
result4=$?

if test \( $result1 -eq 0 -a $result2 -eq 0 -a $result3 -eq 0 -a $result4 -eq 0 \) -a \
       	\( -f auctionService.owfn -a -f loanApprovalProcess.lola -a -f purchaseOrderProcess.dot -a -f shippingService.xml \)
then 
  result=0
else
  result=1
fi

exit $result
